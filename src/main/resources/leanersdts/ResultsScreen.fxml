<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.text.Font?>

<ScrollPane fitToWidth="true" fitToHeight="true" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="leanersdts.ResultsScreenController">
    <content>
        <VBox alignment="TOP_CENTER" spacing="20.0" prefWidth="1366.0">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
            <children>
                <!-- Header Section -->
                <HBox alignment="CENTER">
                    <children>
                        <Label text="Test Results" style="-fx-font-size: 32px; -fx-font-weight: bold;">
                            <font>
                                <Font name="System Bold" size="32.0" />
                            </font>
                        </Label>
                    </children>
                </HBox>
                
                <!-- Learner Info Section -->
                <HBox alignment="CENTER" spacing="20.0">
                    <children>
                        <Label fx:id="learnerNameLabel" text="Learner: " style="-fx-font-size: 18px;">
                            <font>
                                <Font size="18.0" />
                            </font>
                        </Label>
                        <Label fx:id="dateLabel" text="Date: " style="-fx-font-size: 18px;">
                            <font>
                                <Font size="18.0" />
                            </font>
                        </Label>
                    </children>
                </HBox>
                
                <!-- Schedule Info -->
                <HBox alignment="CENTER">
                    <children>
                        <Label fx:id="scheduleLabel" text="Next Scheduled Test: " style="-fx-font-size: 18px;">
                            <font>
                                <Font size="18.0" />
                            </font>
                        </Label>
                    </children>
                </HBox>
                
                <Separator />
                
                <!-- Overall Score Section -->
                <HBox alignment="CENTER" spacing="20.0">
                    <children>
                        <Label fx:id="scoreLabel" text="Your Score: 0/0 (0%)" style="-fx-font-size: 24px;">
                            <font>
                                <Font size="24.0" />
                            </font>
                        </Label>
                        <Label fx:id="timeTakenLabel" text="Time Taken: 00:00" style="-fx-font-size: 18px;">
                            <font>
                                <Font size="18.0" />
                            </font>
                        </Label>
                    </children>
                </HBox>
                
                <!-- Category Results Section -->
                <VBox alignment="CENTER" spacing="10.0" style="-fx-background-color: #f5f5f5; -fx-padding: 15px; -fx-background-radius: 5px;">
                    <children>
                        <Label text="Results by Category" style="-fx-font-size: 20px; -fx-font-weight: bold;">
                            <font>
                                <Font name="System Bold" size="20.0" />
                            </font>
                        </Label>
                        
                        <!-- Category Grid -->
                        <GridPane hgap="10" vgap="10" alignment="CENTER">
                            <columnConstraints>
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="100" prefWidth="150" />
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="100" prefWidth="150" />
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="100" prefWidth="150" />
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="100" prefWidth="150" />
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints minHeight="30" prefHeight="40" vgrow="SOMETIMES" />
                                <RowConstraints minHeight="30" prefHeight="40" vgrow="SOMETIMES" />
                            </rowConstraints>
                            
                            <!-- Headers -->
                            <Label text="Category" style="-fx-font-weight: bold;" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                            <Label text="Score" style="-fx-font-weight: bold;" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                            <Label text="Required to Pass" style="-fx-font-weight: bold;" GridPane.columnIndex="2" GridPane.rowIndex="0" />
                            <Label text="Status" style="-fx-font-weight: bold;" GridPane.columnIndex="3" GridPane.rowIndex="0" />
                            
                            <!-- Signs Row -->
                            <Label text="Signs" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                            <Label fx:id="signsScoreLabel" text="0/28" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                            <Label text="≥ 24/28" GridPane.columnIndex="2" GridPane.rowIndex="1" />
                            <HBox alignment="CENTER_LEFT" spacing="5" GridPane.columnIndex="3" GridPane.rowIndex="1">
                                <Label fx:id="signsStatusLabel" text="Not Passed" />
                                <Region fx:id="signsStatusIndicator" prefWidth="15" prefHeight="15" style="-fx-background-color: #f44336; -fx-background-radius: 7.5;" />
                            </HBox>
                            
                            <!-- Rules Row -->
                            <Label text="Rules" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                            <Label fx:id="rulesScoreLabel" text="0/28" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                            <Label text="≥ 24/28" GridPane.columnIndex="2" GridPane.rowIndex="2" />
                            <HBox alignment="CENTER_LEFT" spacing="5" GridPane.columnIndex="3" GridPane.rowIndex="2">
                                <Label fx:id="rulesStatusLabel" text="Not Passed" />
                                <Region fx:id="rulesStatusIndicator" prefWidth="15" prefHeight="15" style="-fx-background-color: #f44336; -fx-background-radius: 7.5;" />
                            </HBox>
                            
                            <!-- Controls Row -->
                            <Label text="Controls" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                            <Label fx:id="controlsScoreLabel" text="0/8" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                            <Label text="≥ 6/8" GridPane.columnIndex="2" GridPane.rowIndex="3" />
                            <HBox alignment="CENTER_LEFT" spacing="5" GridPane.columnIndex="3" GridPane.rowIndex="3">
                                <Label fx:id="controlsStatusLabel" text="Not Passed" />
                                <Region fx:id="controlsStatusIndicator" prefWidth="15" prefHeight="15" style="-fx-background-color: #f44336; -fx-background-radius: 7.5;" />
                            </HBox>
                        </GridPane>
                    </children>
                </VBox>
                
                <!-- Progress Chart Section -->
                <VBox alignment="CENTER" spacing="10.0">
                    <children>
                        <Label text="Your Progress Over Time" style="-fx-font-size: 20px; -fx-font-weight: bold;">
                            <font>
                                <Font name="System Bold" size="20.0" />
                            </font>
                        </Label>
                        
                        <BarChart fx:id="progressChart" legendVisible="true" prefHeight="300.0" prefWidth="800.0">
                            <xAxis>
                                <CategoryAxis side="BOTTOM" fx:id="xAxis" label="Test Date" />
                            </xAxis>
                            <yAxis>
                                <NumberAxis fx:id="yAxis" label="Score (%)" lowerBound="0" upperBound="100" tickUnit="10" />
                            </yAxis>
                        </BarChart>
                    </children>
                </VBox>
                
                <!-- Action Buttons -->
                <HBox alignment="CENTER" spacing="30.0">
                    <children>
                        <Button fx:id="retakeQuizButton" onAction="#handleRetakeQuizAction" text="Retake Quiz" style="-fx-font-size: 18px; -fx-background-color: #4CAF50; -fx-text-fill: white;" />
                        <Button fx:id="reviewAnswersButton" onAction="#handleReviewAnswersAction" text="Review Answers" style="-fx-font-size: 18px; -fx-background-color: #2196F3; -fx-text-fill: white;" />
                        <Button fx:id="exitToDashboardButton" onAction="#handleExitToDashboardAction" text="Exit to Dashboard" style="-fx-font-size: 18px; -fx-background-color: #f44336; -fx-text-fill: white;" />
                    </children>
                    <VBox.margin>
                        <Insets top="20.0" />
                    </VBox.margin>
                </HBox>
            </children>
        </VBox>
    </content>
</ScrollPane>
