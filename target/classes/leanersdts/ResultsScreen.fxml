<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="20.0" prefHeight="768.0" prefWidth="1366.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="leanersdts.ResultsScreenController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <children>
        <Label text="Quiz Results" style="-fx-font-size: 32px; -fx-font-weight: bold;">
            <font>
                <Font name="System Bold" size="32.0" />
            </font>
        </Label>
        <Label fx:id="scoreLabel" text="Your Score: 0/0 (0%)" style="-fx-font-size: 24px;">
            <font>
                <Font size="24.0" />
            </font>
        </Label>
        <Label fx:id="timeTakenLabel" text="Time Taken: 00:00" style="-fx-font-size: 18px;">
            <font>
                <Font size="18.0" />
            </font>
        </Label>
        <HBox alignment="CENTER" spacing="30.0">
            <children>
                <Button fx:id="retakeQuizButton" onAction="#handleRetakeQuizAction" text="Retake Quiz" style="-fx-font-size: 18px; -fx-background-color: #4CAF50; -fx-text-fill: white;" />
                <Button fx:id="reviewAnswersButton" onAction="#handleReviewAnswersAction" text="Review Answers" style="-fx-font-size: 18px; -fx-background-color: #2196F3; -fx-text-fill: white;" />
                <Button fx:id="exitToDashboardButton" onAction="#handleExitToDashboardAction" text="Exit to Dashboard" style="-fx-font-size: 18px; -fx-background-color: #f44336; -fx-text-fill: white;" />
            </children>
            <VBox.margin>
                <Insets top="20.0" />
            </VBox.margin>
        </HBox>
    </children>
</VBox>
