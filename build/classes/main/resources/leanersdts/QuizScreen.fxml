<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="leanersdts.QuizScreen" spacing="10" alignment="CENTER">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>
    
    <Label fx:id="timerLabel" style="-fx-font-size: 18px"/>
    <Label fx:id="questionNumberLabel" style="-fx-font-size: 16px"/>
    <Text fx:id="questionText" wrappingWidth="600"/>
    
    <VBox fx:id="optionsContainer" spacing="10" alignment="CENTER">
        <!-- Radio buttons will be added here dynamically -->
    </VBox>
    
    <HBox spacing="10" alignment="CENTER">
        <Button fx:id="previousButton" text="Previous" onAction="#handlePrevious"/>
        <Button fx:id="nextButton" text="Next" onAction="#handleNext"/>
        <Button fx:id="submitButton" text="Submit" onAction="#handleSubmit"/>
    </HBox>
</VBox>